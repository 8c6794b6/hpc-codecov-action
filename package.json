{
  "name": "hpc-codecov-action",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "spago bundle-app -x -u \"-g sourcemaps\" -t output/index.js",
    "clean": "rm -rf output dist coverage .nyc_output",
    "coverage": "yarn build && nyc spago test",
    "dist": "yarn build && yarn ncc && yarn uglify",
    "test": "spago test",
    "ncc": "ncc build output/index.js -s",
    "uglify": "uglifyjs --toplevel --source-map -m -c -o dist/main.js dist/index.js",
    "watch": "spago build -x -u '-g sourcemaps' --watch"
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4",
    "@actions/io": "^1.0.2"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.27.0",
    "nyc": "^15.1.0",
    "purescript": "^0.14.0",
    "spago": "^0.19.1",
    "uglify-js": "^3.13.1"
  }
}
